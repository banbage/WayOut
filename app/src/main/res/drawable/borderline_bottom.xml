<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--좌하상우 모두 테두리-->
    <!-- 1dp 를 -2dp로 전환시 태두리 제거 -->
    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">

        <shape android:shape="rectangle" >
            <!--
            테두리 둥글게-->
            <corners android:radius="0dp"/>
            <!--테두리 두깨와 색상 -->
            <stroke
                android:width="1dp"
                android:color="#B1ABAB" />
            <!--내부 색상-->
            <solid android:color="#FFF" />
        </shape>
    </item>

</layer-list>