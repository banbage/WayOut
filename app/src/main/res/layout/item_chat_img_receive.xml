<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_receive_image_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/basic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_receive_image_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름이름"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/item_receive_image_message"
        app:layout_constraintTop_toTopOf="@+id/item_receive_image_profile" />

    <ImageView
        android:id="@+id/item_receive_image_message"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/user"
        android:gravity="start"
        android:maxWidth="240dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/item_receive_image_profile"
        app:layout_constraintTop_toBottomOf="@+id/item_receive_image_name" />

    <TextView
        android:id="@+id/item_receive_image_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="오후 12:00"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_receive_image_message"
        app:layout_constraintStart_toEndOf="@+id/item_receive_image_message" />

    <TextView
        android:id="@+id/item_receive_image_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_marginStart="5dp"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#C8B826"
        app:layout_constraintBottom_toBottomOf="@+id/item_receive_image_date"
        app:layout_constraintStart_toEndOf="@+id/item_receive_image_date" />

</androidx.constraintlayout.widget.ConstraintLayout>