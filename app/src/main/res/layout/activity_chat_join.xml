<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Chat.ChatJoin">

    <ImageView
        android:id="@+id/chatJoin_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/basic"
        app:layout_constraintBottom_toTopOf="@+id/chatJoin_enter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/chatJoin_enter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/category_check"
        android:gravity="center"
        android:padding="10dp"
        android:text="참가하기"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#1B000000"
        app:layout_constraintBottom_toBottomOf="@+id/chatJoin_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chatJoin_image">

        <TextView
            android:id="@+id/chatJoin_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="340dp"
            android:layout_marginEnd="20dp"
            android:text="인원구하기 방이름아아아아아아아아아"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/chatJoin_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="인원구하기 방이름아아아아아아아"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chatJoin_title" />

        <TextView
            android:id="@+id/chatJoin_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="유저 닉네임  test4"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/chat_writer_image"
            app:layout_constraintTop_toTopOf="@+id/chat_writer_image" />


        <TextView
            android:id="@+id/chatJoin_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="/4명"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/chatJoin_join"
            app:layout_constraintTop_toTopOf="@+id/chatJoin_join"
            app:layout_goneMarginEnd="10dp" />

        <TextView
            android:id="@+id/chatJoin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="2dp"
            android:text="개설일 : "
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/chatJoin_max"
            app:layout_constraintTop_toTopOf="@+id/chatJoin_join"
            app:layout_goneMarginEnd="10dp"
            app:layout_goneMarginStart="10dp" />

        <TextView
            android:id="@+id/chatJoin_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="2020.10.23"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/chatJoin_tv"
            app:layout_constraintTop_toTopOf="@+id/chatJoin_tv"
            app:layout_goneMarginEnd="10dp"
            app:layout_goneMarginStart="10dp" />

        <TextView
            android:id="@+id/chatJoin_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="2dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/chat_writer_image"
            app:layout_constraintTop_toBottomOf="@+id/chatJoin_user_name" />


        <ImageView
            android:id="@+id/chat_writer_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/basic"
            app:layout_constraintStart_toStartOf="@+id/chatJoin_info"
            app:layout_constraintTop_toBottomOf="@+id/chatJoin_info" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>