<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentComm_FreeBorad">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/free_search"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@drawable/borderline"
            android:gravity="center_vertical"
            android:hint="검색어를 입력해주세요"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.114"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <ImageView
            android:id="@+id/free_search_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            android:src="@drawable/search"
            app:layout_constraintStart_toEndOf="@+id/free_search"
            app:layout_constraintTop_toTopOf="@+id/free_search" />

        <Button
            android:id="@+id/free_write_btn"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:text="글쓰기"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/free_search_btn"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/free_search_btn" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/free_rv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="120dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>