<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_searchShop_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/heartblack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#CEF6F6F6"
                app:layout_constraintBottom_toBottomOf="@+id/item_searchShop_image"
                app:layout_constraintStart_toStartOf="@+id/item_searchShop_image" />

            <TextView
                android:id="@+id/item_searchShop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="싸인이스케이브 신림대점"
                android:textColor="#5E4D4D"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/item_searchShop_image"
                app:layout_constraintStart_toStartOf="@+id/imageView6" />

            <TextView
                android:id="@+id/item_searchShop_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="4.5"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/item_searchShop_image"
                app:layout_constraintTop_toTopOf="@+id/textView6" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="0dp"
                android:padding="2dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/locationpin"
                app:layout_constraintBottom_toBottomOf="@+id/item_searchShop_distance"
                app:layout_constraintEnd_toStartOf="@+id/item_searchShop_distance"
                app:layout_constraintTop_toTopOf="@+id/item_searchShop_distance" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="15dp"
                android:layout_height="0dp"
                android:padding="2dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/star"
                app:layout_constraintBottom_toBottomOf="@+id/item_searchShop_grade"
                app:layout_constraintEnd_toStartOf="@+id/item_searchShop_grade"
                app:layout_constraintTop_toTopOf="@+id/item_searchShop_grade" />

            <TextView
                android:id="@+id/item_searchShop_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:text="3 km"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/item_searchShop_grade"
                app:layout_constraintTop_toTopOf="@+id/textView6" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>