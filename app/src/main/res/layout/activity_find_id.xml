<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Activity.JoinUser">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="아아디 찾기"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <EditText
            android:id="@+id/findID_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="8"
            android:maxLength="11"
            android:maxLines="1"
            android:background="@drawable/borderline"
            android:ems="10"
            android:hint="*휴대폰 번호 - 없이 입력"
            android:inputType="number" />

        <TextView
            android:id="@+id/findID_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:background="#24409F"
            android:textColor="#FFFFFF"
            android:text="인증번호" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <EditText
            android:id="@+id/findID_numberCk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="8"
            android:background="@drawable/borderline"
            android:ems="10"
            android:hint="*인증번호 입력"
            android:maxLength="11"
            android:maxLines="1"
            android:enabled="false"
            android:inputType="number"/>

        <TextView
            android:id="@+id/findID_ck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:background="#24409F"
            android:textColor="#FFFFFF"
            android:text="인증확인" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <TextView
            android:id="@+id/findID_reset"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="13sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:clickable="false"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/findID_timer"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textSize="13sp"
            android:visibility="invisible"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/findID_ID"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        android:layout_weight="2.2"
        android:gravity="center"
        />

    <Button
        android:id="@+id/findID_Login"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1.1"
        android:textSize="20sp"
        android:text="로그인 하러가기" />

    <Button
        android:id="@+id/findID_findPw"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1.1"
        android:textSize="20sp"
        android:text="비밀번호 찾기" />

</LinearLayout>